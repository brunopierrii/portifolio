                        </ul>
                    </li>
                    </ul>
                    <form class="d-flex">
                        <input class="form-control me-2 " type="search" style="background-color:#000010;color:white;" placeholder="Buscar" aria-label="Search">
                        <button class="btn btn-outline-light" type="submit"><i class="fa-solid fa-magnifying-glass"></i></button>
                    </form>
                </div>
            </div>
        </nav>
        <br>
        <br>
        <br>

    <h1>Comentários</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Nome</th>
                <th>Email</th>
                <th>Comentário</th>
                <th>Ações</th>
            </tr>
        </thead>
        <tbody>
        {% for usuario in usuarios %}
            <tr>
                <td>{{ usuario.name }}</td>
                <td>{{ usuario.email }}</td>
                <td>{{ usuario.comment }}</td>
                <td>
                    <a class="btn btn-dark" href="{{ path('app_usuario_show', {'id': usuario.id}) }}">Exibir</a>
                    <a class="btn btn-dark" href="{{ path('app_usuario_edit', {'id': usuario.id}) }}">Editar</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">Não há comentários</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a class="btn btn-dark ms-2" href="{{ path('app_usuario_new') }}">Crie um novo comentário</a>
{% endblock %}
